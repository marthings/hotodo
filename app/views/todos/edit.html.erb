<% content_for :title, "Editing todo" %>

<h1>Editing todo</h1>

<%= turbo_frame_tag dom_id(@todo, :edit) do %>
  <%= render "form", todo: @todo %>
  <div class="flex gap-4 items-center">
    <%= button_to "Delete", @todo, method: :delete, class: "link", data: { turbo_confirm: "Are you sure?", turbo_frame: "_top" } %>
    <%= link_to "Cancel", todos_path, class: "link" %>
  </div>
<% end %>

